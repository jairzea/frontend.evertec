{
  "name": "dnetix/redirection",
  "description": "Library to connect with PlacetoPay Redirection service",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Diego Calle",
      "email": "dnetix@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.0",
    "ext-soap": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^6.5"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16",
    "phpunit/phpunit": "^8.5",
    "squizlabs/php_codesniffer": "3.*",
    "symfony/var-dumper": "^4.3"
  },
  "autoload": {
    "psr-4": {
      "Dnetix\\Redirection\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "php-cs-fixer": "vendor/bin/php-cs-fixer fix --config=.php_cs"
  }
}
